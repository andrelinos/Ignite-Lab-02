{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/components/*": [
        "src/components/*"
      ],
      "~/hooks/*": [
        "src/hooks/*"
      ],
      "~/lib/*": [
        "src/lib/*"
      ],
      "~/context/*": [
        "src/context/*"
      ],
      "~/pages/*": [
        "src/pages/*"
      ],
      "~/config/*": [
        "src/config/*"
      ],
      "~/graphql/*": [
        "src/graphql/*"
      ],
      "~/services/*": [
        "src/services/*"
      ],
      "~/styles/*": [
        "src/styles/*"
      ]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
